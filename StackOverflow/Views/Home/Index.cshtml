@{
    ViewData["Title"] = "Stack Overflow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

<h2>Authentication with Identity</h2>
<hr/>

@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>
    @using (Html.BeginForm("LogOff", "User"))
    {
        <input type="submit" class="btn btn-default" value="Log off"/>
    }
}
else
{
    <p>@Html.ActionLink("Sign up", "SignUp", "User")</p>
    <p>@Html.ActionLink("Log in", "Login", "User")</p>
}
