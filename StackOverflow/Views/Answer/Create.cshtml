@model StackOverflow.Models.Answer
@using System.Security.Claims

@{
    ViewData["Title"] = "Create Answer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (User.Identity.IsAuthenticated)
{
    <h3>Hello @User.Identity.Name! Answer @ViewBag.question.Topic</h3>

    @using (Html.BeginForm("Create", "Answer"))
    {
        <input type="hidden" name="QuestionId" value="@ViewBag.question.QuestionId">
        <p>@Html.LabelFor(m => m.Description)</p>
        <p>@Html.EditorFor(m => m.Description)</p>
      
        <input type="submit" class="btn btn-default" value="Create"/>
    }
}
else
{
    <h3>Please login</h3>
    <p>@Html.ActionLink("Sign up", "SignUp", "User")</p>
    <p>@Html.ActionLink("Log in", "Login", "User")</p>
}
