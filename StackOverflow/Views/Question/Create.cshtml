@model StackOverflow.Models.Question
@using System.Security.Claims

@{
    ViewData["Title"] = "Questions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated)
{
    <h3>Hello @User.Identity.Name! Ask a Question</h3>

    @using (Html.BeginForm("Create", "Question"))
    {
        <p>@Html.LabelFor(m => m.Topic)</p>
        <p>@Html.EditorFor(m => m.Topic)</p>

        <p>@Html.LabelFor(m => m.QuestionDescription)</p>
        <p>@Html.TextAreaFor(m => m.QuestionDescription)</p>
       
      
        <input type="submit" class="btn btn-default" value="Create"/>
    }
}
else
{
    <p>@Html.ActionLink("Sign up", "SignUp", "User")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
}